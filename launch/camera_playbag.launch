<launch>

    <!-- ========================================================== -->
    <!-- Launch the camera.                                         -->
    <!-- ========================================================== -->

    <param name="camera/image_rect/compressed/format"  type="string" value="png" />
    
    <node name="playbag" pkg="rosbag" type="play" args="--clock --delay=1 --rate=8 --loop /home/ssafarik/fly4.bag" required="true" />
    <node name="view_raw"         pkg="image_view"     type="image_view"  ns="camera"  args="image:=image_raw" />
  
</launch>
